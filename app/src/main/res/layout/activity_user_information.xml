<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInformation"
        android:background="@color/white"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Information"
                android:textSize="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageview"
                app:cardCornerRadius="60dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:id="@+id/imageview1"
                    android:src="@drawable/pic1">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:text="Name: "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:text="Username "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:text="Bio: "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:text="This is user's bio "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp">
                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/cardsabak"
                    android:layout_marginTop="10dp"
                    android:background="@color/teal_700"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="Current Sabak"
                        android:textColor="@color/black"
                        android:id="@+id/textsabak"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textsabakvalue"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/textsabak"
                        android:gravity="center"
                        android:text="sabak number"
                        android:textSize="12sp"></TextView>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="65dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Correct">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Incorrect"></Button>
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/cardsabaki"
                    android:layout_marginTop="20dp"
                    android:background="@color/teal_700"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="Current Sabaki"
                        android:textColor="@color/black"
                        android:id="@+id/textsabaki"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textsabakivalue"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/textsabaki"
                        android:gravity="center"
                        android:text="sabaki number"
                        android:textSize="12sp"></TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="65dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Correct">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Incorrect"></Button>
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/cardmanzil"
                    android:layout_marginTop="20dp"
                    android:background="@color/teal_700"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="Current Manzil"
                        android:textColor="@color/black"
                        android:id="@+id/textmanzil"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textmanzilvalue"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/textmanzil"
                        android:gravity="center"
                        android:text="manzil number"
                        android:textSize="12sp"></TextView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="65dp"
                android:paddingBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Correct">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp">
                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Incorrect"></Button>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>
